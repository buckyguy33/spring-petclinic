            steps {
                sh ' sh 'packer build -var aws_access_key=AKIAI6YWZ6GJ5DGMIO6A -var aws_secret_key=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 image.json''
            }
        }
    }
}
